<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.phoneshop.fxui.store.StoreUIController">

   <VBox prefWidth="1200.0" spacing="5">
      <StackPane prefHeight="40" prefWidth="1200" style="-fx-background-color: #E6F7F4;">
         <!-- Chữ chạy -->
         <Label fx:id="topBannerText" style="-fx-font-size: 14px; -fx-text-fill: #333;" text="SẢN PHẨM CHÍNH HÃNG - CAM KẾT LỖI ĐỔI LIỀN - HOTLINE 1900.2091" StackPane.alignment="CENTER_LEFT" />
      </StackPane>



      <HBox alignment="CENTER_LEFT" layoutY="30.0" prefHeight="70.0" prefWidth="1200.0" spacing="20" style="-fx-background-color: #FFFFFF;">
      <!-- Logo -->
         <ImageView fitHeight="60.0" preserveRatio="true" style="-fx-translate-x: 2;">
            <image>
               <Image url="@/images/logo6.png" />
            </image>
         </ImageView>

      <!-- Thanh tìm kiếm -->
         <TextField fx:id="searchBar" prefWidth="600.0" promptText=" Tìm kiếm sản phẩm, hãng sản xuất,..." style="                -fx-font-size: 16px;                -fx-prompt-text-fill: derive(-fx-control-inner-background, -30%);                -fx-font-style: italic;">
         </TextField>


         <MFXButton fx:id="btnSearch" onAction="#btnSearchClick" text="Tìm kiếm" />

      <!-- Spacer -->
      <Pane HBox.hgrow="ALWAYS" />

      <!-- Tài khoản -->
      <Label fx:id="txtUserName" style="-fx-font-size: 14px;" text="Tên người dùng" />

      <!-- Giỏ hàng -->
      <MFXButton fx:id="btnCart" onAction="#btnCartClick" text="🛒" />

   </HBox>

      <!-- Sort bar -->
      <!-- Sort bar -->
      <HBox spacing="15" style="-fx-background-color: #E1E1E1;">
         <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
         </padding>
         <children>
            <Label style="-fx-font-weight: bold;" text="Sắp xếp theo:" />
            <MFXButton onAction="#onSortRelevant" text="Liên quan" />
            <MFXButton onAction="#onSortNewest" text="Mới nhất" />
            <MFXButton onAction="#onSortBestSeller" text="Bán chạy" />
            <MFXButton onAction="#onSortPriceAsc" text="Giá tăng dần" />
            <MFXButton onAction="#onSortPriceDesc" text="Giá giảm dần" />
         </children>
      </HBox>
   </VBox>

   <!-- Banner Image -->
   <ImageView fitHeight="120.0" fitWidth="1180.0" layoutX="10.0" layoutY="172.0" preserveRatio="true" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="172.0">
      <image>
         <Image url="@/images/banner1.jpg" />
      </image>
   </ImageView>

   <!-- Sản phẩm -->
   <ScrollPane layoutY="300.0" prefHeight="490.0" prefWidth="1180.0" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="300.0">
      <TilePane fx:id="GpPhone" hgap="20" prefColumns="4" vgap="20">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
      </TilePane>
   </ScrollPane>


</AnchorPane>
